#include <stdio.h>
#include <stdlib.h>

#define MAX_RECORDS 100

typedef struct {
    int id;
    char data[256];
} Record;

void addRecord(Record records[], int *count, int id, const char *data) {
    if (*count < MAX_RECORDS) {
        records[*count].id = id;
        snprintf(records[*count].data, sizeof(records[*count].data), "%s", data);
        (*count)++;
    } else {
        printf("Record limit reached.\n");
    }
}

void displayRecords(Record records[], int count) {
    for (int i = 0; i < count; i++) {
        printf("Record ID: %d, Data: %s\n", records[i].id, records[i].data);
    }
}

int main() {
    Record records[MAX_RECORDS];
    int count = 0;

    addRecord(records, &count, 1, "First Record");
    addRecord(records, &count, 2, "Second Record");
    addRecord(records, &count, 3, "Third Record");

    displayRecords(records, count);
    return 0;
}
